{
  "name": "claude-code-ui",
  "version": "1.0.0",
  "description": "Electron UI for Claude Code chat interface",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && tsc -p electron/tsconfig.json && NODE_ENV=development electron dist/main.js",
    "build": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:all": "npm run build && npm run build:electron",
    "start": "npm run build:all && electron dist/main.js",
    "dist": "npm run build:all && electron-builder",
    "preview": "vite preview",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.4.0",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.claude.code-ui",
    "productName": "Claude Code UI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "icon": "assets/icons/icon",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
